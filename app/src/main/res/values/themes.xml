<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PicPayAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPicPay</item>
        <item name="android:windowBackground">@drawable/ic_logo</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/colorPicPay</item>
        <item name="android:navigationBarColor">@color/colorPicPay</item>
    </style>

    <style name="Theme.PicPayAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PicPayAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PicPayAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FonteAndroid" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/android</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleScrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/track</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarFadeDuration">300</item>
    </style>

</resources>